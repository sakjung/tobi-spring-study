<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="realConnectionMaker" class="com.example.demo.dao.DConnectionMaker" />

    <bean id="connectionMaker" class="com.example.demo.dao.CountingConnectionMaker">
        <property name="realConnectionMaker" ref="realConnectionMaker" />
    </bean>

    <bean id="userDao" class="com.example.demo.dao.UserDao">
        <property name="connectionMaker" ref="connectionMaker" />
    </bean>
</beans>